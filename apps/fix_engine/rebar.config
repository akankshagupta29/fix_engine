{deps, [
   {fix_parser, "", {git, "git://github.com/dmitryme/fix_parser.git", {branch, "master"}}, [raw]}
]}.

{port_specs, [
      {"linux", "priv/fix_parser.so",
         ["c_src/fix_parser.c", "../../deps/fix_parser/src/*.c", "../../deps/fix_parser/src/lin/*.c"],
            [{env, [
               {"CFLAGS", "$CFLAGS -std=gnu99 -O3 -I/usr/include/libxml2 -I../../deps/fix_parser/include -I../../deps/fix_parser/src"},
               {"LDFLAGS", "$LDFLAGS -lxml2"}
            ]}]}
]}.

{eunit_opts, [{src_dirs, "test"}]}.
